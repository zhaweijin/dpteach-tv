<?xml version="1.0" encoding="utf-8"?>
<com.dp.launcher.tv.main.login.LoginItemFocusLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.MainActivity"
    android:focusable="true"
    android:layout_width="991dp"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/view1"
        android:layout_width="944dp"
        android:layout_height="174dp"
        android:background="@drawable/login_main_item_focus_selector"
        android:duplicateParentState="true">

        <LinearLayout
            android:layout_width="800dp"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="54dp"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:duplicateParentState="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="同步已购买课程"
                    android:textColor="@drawable/login_main_input_color_selector"
                    android:textSize="42sp"></TextView>

                <TextView
                    android:id="@+id/sub_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="同步已购买课程"
                    android:textColor="@drawable/login_main_input_color_selector"
                    android:textSize="38sp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_item_arrow" />

</com.dp.launcher.tv.main.login.LoginItemFocusLayout>

