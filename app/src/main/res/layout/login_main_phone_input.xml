<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_phone_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:layout_marginTop="264dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tips"
                android:textSize="30sp"
                android:text="@string/phone_code_send_success"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <FrameLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:background="@android:color/holo_red_light"
                android:layout_height="126dp">
                <TextView
                    android:id="@+id/input_phone"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="145dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/receiver_code1"
                            android:textSize="50sp"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </FrameLayout>

                    <View
                        android:background="@android:color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent">
                    </View>
                    <FrameLayout
                        android:layout_width="145dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/receiver_code2"
                            android:layout_gravity="center"
                            android:textSize="50sp"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </FrameLayout>

                    <View
                        android:background="@android:color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent">
                    </View>
                    <FrameLayout
                        android:layout_width="145dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/receiver_code3"
                            android:layout_gravity="center"
                            android:textSize="50sp"
                            android:text="3"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </FrameLayout>

                    <View
                        android:background="@android:color/white"
                        android:layout_width="1dp"
                        android:layout_height="match_parent">
                    </View>
                    <FrameLayout
                        android:layout_width="145dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/receiver_code4"
                            android:layout_gravity="center"
                            android:textSize="50sp"
                            android:text="4"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/number_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <FrameLayout
                android:background="@drawable/login_main_input_number_selector"
                android:id="@+id/get_phone_code"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="114dp">
                <TextView
                    android:textSize="36sp"
                    android:text="获取验证码"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>



</FrameLayout>