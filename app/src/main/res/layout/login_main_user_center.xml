<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".main.MainActivity">

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:layout_gravity="left|top"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:text="我的"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_gravity="top|right"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginRight="120dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <ImageView
            android:background="@drawable/logo"
            android:layout_width="248dp"
            android:layout_height="match_parent">
        </ImageView>
        <TextView
            android:text="大鹏教育"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="272dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_icon"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_launcher_round"
            android:layout_width="254dp"
            android:layout_height="254dp">
        </com.facebook.drawee.view.SimpleDraweeView>

        <TextView
            android:text="小鱼"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="53sp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="大鹏号:"
                android:textSize="40sp"
                android:textColor="@color/login_input_main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="xx3dddd"
                android:textSize="40sp"
                android:textColor="@color/login_input_main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="手机号:"
                android:textSize="40sp"
                android:textColor="@color/login_input_main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="132"
                android:textSize="40sp"
                android:textColor="@color/login_input_main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <FrameLayout
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/layout_exit"
            android:background="@drawable/login_main_user_center_exit_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:layout_width="382dp"
            android:layout_height="96dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/login_user_center_exit_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="40sp"
                    android:text="退出"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_marginLeft="1218dp"
        android:layout_width="582dp"
        android:layout_height="match_parent">

        <include layout="@layout/login_main_scan_code"></include>
    </FrameLayout>
</FrameLayout>